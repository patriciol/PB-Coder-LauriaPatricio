html
    head
        link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css' integrity='sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u' crossorigin='anonymous')  
        title PUG

body
    div.jumbotron.container.mt-3
        h3 Ingrese productos PUG
        br
        form(action="/productos",method="post")
            div.form-group
                label(for="title") Producto
                input.form-control(type="text",name="title",id="title")
            div.form-group
                label(for="price") Precio
                input.form-control(type="number",name="price",id="price")
            div.form-group
                label(for="thumbnail") Imagen
                input.form-control(type="text",name="thumbnail",id="thumbnail")
            input.btn.btn-success(type="submit",value="Enviar")
            button.btn.btn-light(type="button")
                a(href="/productos") Ir a Productos