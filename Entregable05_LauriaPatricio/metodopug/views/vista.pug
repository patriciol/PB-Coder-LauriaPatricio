html
    head
        link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css' integrity='sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u' crossorigin='anonymous')  
        title PUG

body
    div.jumbotron.container.mt-3
        
        if hayProd
            h3.text-primary Vista de productos
            br
            div.table-responsive
                table.table.table-dark
                    tr.text-warning
                        th.font-wight-bold Producto
                        th.font-wight-bold Precio
                        th.font-wight-bold Imagen
                
                        each producto in arrayProd
                            tr
                                td= producto.title
                                td= producto.price 
                                td
                                    img(src=`${producto.thumbnail}`,width="40",height="40")               
        else
            h3.alert.alert-danger No hay productos    
        button.btn.btn-light(type="button")
            a(href="/") Ir a formulario       

