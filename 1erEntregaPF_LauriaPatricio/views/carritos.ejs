<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- CSS only -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css"
        integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
    <title>Document</title>
</head>

<body>
    <nav class="navbar navbar-dark bg-dark">
        <button class="btn btn-sm btn-outline-secondary" type="button" ><a href="/">Formulario de carga</a></button>
        <button class="btn btn-sm btn-outline-secondary" type="button"><a href="/api/Productos">Productos</a></button>
        <button class="btn btn-sm btn-outline-secondary" type="button"> <a href="#">Carrito</a></button>
        
    </nav>

    <div class="jumbotron container mt-3 overflow-hidden">

        <br>
        <% if(arrayCarritos.length>0) { %>
            <div class="row justify-content-around ">
        
                <% arrayCarritos.forEach (carrito=> { %>
                    <div class="card justify-center  " style="width: 30%;">
                        <div class="card-body">
                            <h5 class="card-title">
                                Carrito NÂ°: <%= carrito.id%>
                            </h5>

                            <% carrito.productos.forEach (producto=> { %>
                                <li><%= producto.nombre%></li>
                            <%})%>
                            
                            <a href="/api/carrito/<%= carrito.id%>/productos" class="btn btn-secondary">Detalle</a>
                        
                        </div>
                    </div>
                    <%})%>
        
            </div>
            <%} else {%>
        
                <h3 class="alert alert-danger">No hay carritos generados</h3>
        
                <%}%>
        
                    <button><a href="/">Ir a Formulario</a></button>


    </div>

</body>

</html>